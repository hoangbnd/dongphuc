@if (Model != null)
{ 
<div>
	<h3 class="title" @ViewHelper.Edit(Model,"Name")>@Html.Raw(Model.Name ?? "")</h3>
	<div class="content">
		<div @ViewHelper.Edit(Model,"Phone")>@Html.Raw(Model.Phone ?? "")</div>
		<div @ViewHelper.Edit(Model,"Email")>@Html.Raw(Model.Email ?? "")</div>
		<div @ViewHelper.Edit(Model,"Address")>@Html.Raw(Model.Address ?? "")</div>
		<div @ViewHelper.Edit(Model,"Note")>@Html.Raw(Model.Note ?? "")</div>
		<div @ViewHelper.Edit(Model,"ProductUUID")>@Html.Raw(Model.ProductUUID ?? "")</div>
		<div @ViewHelper.Edit(Model,"ProductName")>@Html.Raw(Model.ProductName ?? "")</div>
		<div @ViewHelper.Edit(Model,"Quantity")>@Html.Raw(Model.Quantity ?? "")</div>
		<div @ViewHelper.Edit(Model,"Status")>@Html.Raw(Model.Status ?? "")</div>
	</div>
</div>
}