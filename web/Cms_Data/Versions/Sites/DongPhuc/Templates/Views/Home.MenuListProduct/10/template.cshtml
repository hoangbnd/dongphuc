 <!--section-list-product-menu-->
<div class="section-list-product-menu hidden-md hidden-sm hidden-xs ">
  <!--category-->
  <div class="category bg-blue">
    <div class="row row-fix">
      <div class="col-lg-2 col-md-4 col-sm-4 col-xs-6  col-fix">
        <a class="product-cate home text-uppercase text-white" title="Trang chủ">
          <i class="fa fa-bars" aria-hidden="true"></i>
          Danh mục sản phẩm
        </a>
      </div>
      
      <div class="col-lg-7 col-md-4 col-sm-4 hidden-xs col-fix">
        <div class="search-box">
          <form action="/tim-kiem" id="searchbox-home">
            <input type="text" class="form-control" id="txtSearch-home" placeholder="Từ khóa tìm kiếm..." name="keyword"  autocomplete="off" required>
            <button id="btnSearch-home" class="btn searchbtn text-blue" type="submit" >
              <i class="fa fa-search" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
      
      <div class="col-lg-3 col-md-4 col-sm-4 col-xs-6 col-fix">
        <a id="link-dialog" class="cart-top-header" href="@Url.FrontUrl().PageUrl("mua-hang")">@("Giỏ hàng".Label())
          (<span id="totalcart">0</span>)
        </a>
      </div>
      
    </div>
  </div>
  <!--/category-->
  <!--category-->
  <div class="menu-banner-video">
    <div class="row row-fix">
      <div class="col-lg-2 col-md-4 col-sm-4 col-xs-6  col-fix">
        @Html.FrontHtml().RenderView("Home.FlexMenu",ViewData)
      </div>
      <div class="col-lg-7 hidden-md hidden-sm hidden-xs col-fix">
        @Html.FrontHtml().RenderView("Home.Slider",ViewData)
      </div>
      
      <div class="col-lg-3 col-fix hidden-md hidden-sm hidden-xs">
        <div class="video-top">
          <a href="#">
            @Html.FrontHtml().RenderHtmlBlock("Home.Ad1")
          </a>
          
          <a href="#" target="_blank">
            @Html.FrontHtml().RenderHtmlBlock("Home.Ad2")
          </a>
          <a href="#" target="_blank">
            @Html.FrontHtml().RenderHtmlBlock("Home.Ad3")
          </a>
        </div>
      </div>
    </div>
  </div>
  <!--/category-->
  
</div>
<!--/section-list-product-menu-->

<div class="hidden-lg">
  @Html.FrontHtml().RenderView("Share.FlexMenu",ViewData)
</div>

