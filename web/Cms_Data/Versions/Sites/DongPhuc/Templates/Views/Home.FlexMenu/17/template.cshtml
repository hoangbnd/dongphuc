@if(ViewBag.Parent != null){
	<ul class="flexy-menu orange vertical" id="hidden">
      @foreach(var parent in ViewBag.Parent){
      	<li class="flexymenuli">
           <span class="icon-cate"></span>
           <a href="@parent.Url" title="@parent.Title">@parent.Title</a>
          	@{
          	ViewBag.child = ContentHelper.TextFolder("Product~ProductCategory").CreateQuery().WhereEquals("ParentUUID", parent.UUID).Take(10);
            }
            @if(ViewBag.child != null && ((TextContent[])ViewBag.child).Any()){
              <ul class="flexy-menu-box">
                @foreach(var child in ViewBag.child){
                	<div class="flexy-menu-inner">
                      <a href="@child.Url" title="@child.Title" class="menu-top-red">@child.Title</a>
                    </div>
                }
              </ul>
            }
             
         </li>
      }
    </ul>
}
